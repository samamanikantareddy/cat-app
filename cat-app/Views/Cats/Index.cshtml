@{
    ViewData["Title"] = "Cat List";
}
@model List<Cat>

<div class="container">
    <div class="row">
        @if (TempData != null)
            @if ((bool)TempData["Error"]!)
            {
                <h3 class="text-danger">@TempData["Message"]</h3>
            }
            else
                @foreach (Cat cat in Model)
                {
                    <div class="col-md-4 col-lg-3 col-sm-6 p-2">
                        <form asp-controller="Cats">
                            <div class="card p-2" style="width: 18rem;">
                                <img src="@cat.url" class="card-img-top" style="height: 400px;" alt="cat">
                                @if (cat.breeds!.Count != 0)
                                {
                                    <h6>Description</h6>
                                    <p>@cat.breeds![0].description</p>
                                }
                                <div class="card-body">
                                    <button name="id" type="submit" value="@cat.id" asp-action="AddToFavourites" class="btn btn-primary">Add to Favourites</button>
                                </div>
                            </div>
                        </form>
                    </div>
                }
    </div>
</div>
